<Window x:Class="Examinator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Examinator"
        mc:Ignorable="d" FontSize="14"
        Title="Examinator - Question Builder" Height="541" Width="800"  Background="#FF232323" Foreground="#FFE0E0E0">

    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="4" />
            <Setter Property="Padding" Value="4" />
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="4" />
            <Setter Property="Padding" Value="4" />
        </Style>
        <Style TargetType="Button">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="4" />
            <Setter Property="Padding" Value="14,4,14,4" />
            <Setter Property="Background" Value="Black" />
            <Setter Property="Foreground" Value="#FFE0E0E0" />
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Column="1"  Grid.Row="1" Text="Please enter your question:"/>
        <TextBox Name="questionText" Grid.Column="1" Grid.Row="2" Grid.ColumnSpan="2" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Visible" Height="100"/>
        <Button Grid.Column="3" Grid.Row="2" Content="Attach Image" VerticalAlignment="Bottom" />

        <GroupBox Grid.Column="1" Grid.Row="5" Grid.ColumnSpan="3" Header="Possible Answers" Background="#FF232323" Margin="4,24,4,4">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="20"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="20"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Column="1" Grid.Row="1" Text="Correct answer" />
                <TextBox Grid.Column="2" Grid.Row="1" Name="correctAnswer" Text="42" />

                <Rectangle Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="2" Height="1" Width="auto" Stroke="#FFEEE3E3" Margin="4" />

                <TextBlock Grid.Column="1" Grid.Row="3" Text="Alternative answer 1" />
                <TextBox Name="answer1" Grid.Column="2" Grid.Row="3" Text="Answer text 1" />

                <TextBlock Grid.Column="1" Grid.Row="4" Text="Alternative answer 2" />
                <TextBox Name="answer2" Grid.Column="2" Grid.Row="4" Text="Answer text 2" />

                <TextBlock Grid.Column="1" Grid.Row="5" Text="Alternative answer 3" />
                <TextBox Name="answer3" Grid.Column="2" Grid.Row="5" Text="Answer text 3" />
            </Grid>

        </GroupBox>

        <Button Grid.Column="3" Grid.Row="6" Content="Create Question" Click="Button_Click" />

        <TextBlock Grid.Column="1" Grid.Row="7" Grid.ColumnSpan="3" FontSize="10" VerticalAlignment="Bottom" HorizontalAlignment="Center" Text="{Binding Name, Mode = OneWay, StringFormat=Currently adding questions for {0}}" />

    </Grid>
</Window>
